{
  "name": "dgc-green-pass-decoder",
  "version": "1.0.0",
  "description": "A simple web app to read what's inside the Green Pass QR-code.",
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@faustbrian/node-base32": "^1.0.0",
    "@fidm/x509": "^1.2.1",
    "cbor": "^8.0.0",
    "cose-js": "^0.6.0",
    "jsqr": "^1.4.0",
    "qr-scanner": "^1.3.0",
    "qrcode": "^1.4.4",
    "uglify-js": "^3.14.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "tinyify": "^3.0.0",
    "watchify": "^4.0.0"
  },
  "scripts": {
    "start": "watchify src/source.js -o public/bundle.js -v --debug",
    "build": "browserify src/source.js -o public/bundle.js && uglifyjs public/bundle.js --compress -o public/bundle.js",
    "shell": "node --experimental-repl-await",
    "deploy": "git subtree push --prefix public origin gh-pages"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  }
}
